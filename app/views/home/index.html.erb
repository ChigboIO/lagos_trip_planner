<div class="container" style="padding-top: 5em">
  <%= form_tag "/search", id: "search-form", remote: true do %>
    <div class="form-group">
      <label>Starting Point</label>
      <%= text_field_tag :origin, "", class: "form-control", id: "startingPoint", onfocus: "geolocate()" %>
      <!-- <input type="text" class="form-control" id="startingPoint" onFocus="geolocate()"> -->
    </div>
    <div class="form-group">
      <label>Destination</label>
      <%= text_field_tag :destination, "", class: "form-control", id: "destination", onfocus: "geolocate()" %>
      <!-- <input type="text" class="form-control" id="destination" onFocus="geolocate()"> -->
    </div>
    <button type="submit" class="btn btn-default">Find Path</button>
  <% end %>

  <h4>Path:</h4>
  <div class="progress" id="path-finding-progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
      finding path...
    </div>
  </div>
  <div id="path-div">
    <%#= @path %>
  </div>
</div>

